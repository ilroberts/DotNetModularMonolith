@page
@model ECommerce.AdminUI.Pages.Customers.IndexModel
@{
    ViewData["Title"] = "Customers";
}

<h1>Customers</h1>

<p>
    <a asp-page="Create" class="btn btn-primary">Create New</a>
</p>

@if (!Model.Customers.Any())
{
    <div class="alert alert-info">
        No customers found.
    </div>
}
else
{
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Name</th>
                <th>Email</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var customer in Model.Customers)
            {
                <tr>
                    <td>@customer.Name</td>
                    <td>@customer.Email</td>
                    <td>
                        <a asp-page="./Details" asp-route-id="@customer.Id" class="btn btn-info btn-sm">Details</a>
                        <a asp-page="./Edit" asp-route-id="@customer.Id" class="btn btn-warning btn-sm">Edit</a>
                        <a asp-page="./Delete" asp-route-id="@customer.Id" class="btn btn-danger btn-sm">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
