@page "{id:guid}"
@model ECommerce.AdminUI.Pages.Products.EditModel
@{
    ViewData["Title"] = "Edit Product";
}

<h1>Edit Product</h1>
<hr />

<div class="row">
    <div class="col-md-8">
        <form method="post">
            <input type="hidden" asp-for="Product.Id" />
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="mb-3">
                <label asp-for="Product.Name" class="form-label">Name</label>
                <input asp-for="Product.Name" class="form-control" />
                <span asp-validation-for="Product.Name" class="text-danger"></span>
            </div>

            <div class="row mb-3">
                <div class="col-md-6">
                    <label asp-for="Product.Price" class="form-label">Price</label>
                    <div class="input-group">
                        <span class="input-group-text">$</span>
                        <input asp-for="Product.Price" class="form-control" type="number" step="0.01" min="0.01" />
                    </div>
                    <span asp-validation-for="Product.Price" class="text-danger"></span>
                </div>

                <div class="col-md-6">
                    <label asp-for="Product.StockQuantity" class="form-label">Stock Quantity</label>
                    <input asp-for="Product.StockQuantity" class="form-control" type="number" min="0" />
                    <span asp-validation-for="Product.StockQuantity" class="text-danger"></span>
                </div>
            </div>

            <div class="mb-3">
                <label asp-for="Product.ImageUrl" class="form-label">Image URL</label>
                <input asp-for="Product.ImageUrl" class="form-control" />
                <span asp-validation-for="Product.ImageUrl" class="text-danger"></span>
                <small class="text-muted">Enter a URL for the product image</small>
            </div>

            <div class="mb-3">
                <input type="submit" value="Save" class="btn btn-primary" />
                <a asp-page="Index" class="btn btn-secondary">Cancel</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
