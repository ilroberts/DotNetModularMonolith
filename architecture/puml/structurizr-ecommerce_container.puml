person "==Customer\n<size:10>[Person]</size>\n\nA customer browsing and purchasing products" <<Customer>> as Customer
person "==Administrator\n<size:10>[Person]</size>\n\nManages products, orders, and customers" <<Administrator>> as Administrator
person "==Database Administrator\n<size:10>[Person]</size>\n\nManages and maintains the database infrastructure" <<DatabaseAdministrator>> as DatabaseAdministrator
rectangle "==Accounting System\n<size:10>[Software System]</size>\n\nHandles financial transactions and reporting for the e-commerce platform" <<AccountingSystem>> as AccountingSystem
rectangle "==Shipping System\n<size:10>[Software System]</size>\n\nManages shipping and delivery of orders" <<ShippingSystem>> as ShippingSystem
rectangle "==Notification System\n<size:10>[Software System]</size>\n\nSends notifications to customers about their orders" <<NotificationSystem>> as NotificationSystem

rectangle "ECommerce System\n<size:10>[Software System]</size>" <<ECommerceSystem>> {
  rectangle "ECommerce Backend Services" <<group1>> as group1 {
    skinparam RectangleBorderColor<<group1>> #cccccc
    skinparam RectangleFontColor<<group1>> #cccccc
    skinparam RectangleBorderStyle<<group1>> dashed

    rectangle "==ECommerce API\n<size:10>[Container: .NET 8, ASP.NET Core]</size>\n\nThe backend API for handling e-commerce operations" <<ECommerceSystem.ECommerceAPI>> as ECommerceSystem.ECommerceAPI
  }

  rectangle "ECommerce Data Stores" <<group2>> as group2 {
    skinparam RectangleBorderColor<<group2>> #cccccc
    skinparam RectangleFontColor<<group2>> #cccccc
    skinparam RectangleBorderStyle<<group2>> dashed

    rectangle "==Database\n<size:10>[Container: SQL Server]</size>\n\nStores all e-commerce data including products, orders, and customer information" <<ECommerceSystem.Database>> as ECommerceSystem.Database
  }

  rectangle "ECommerce User Interfaces" <<group3>> as group3 {
    skinparam RectangleBorderColor<<group3>> #cccccc
    skinparam RectangleFontColor<<group3>> #cccccc
    skinparam RectangleBorderStyle<<group3>> dashed

    rectangle "==Admin UI\n<size:10>[Container: Blazor, ASP.NET Core]</size>\n\nThe administrative interface for managing the e-commerce platform" <<ECommerceSystem.AdminUI>> as ECommerceSystem.AdminUI
    rectangle "==Customer UI\n<size:10>[Container: Blazor, ASP.NET Core]</size>\n\nThe customer-facing interface for browsing and purchasing products" <<ECommerceSystem.CustomerUI>> as ECommerceSystem.CustomerUI
  }

}

ECommerceSystem.CustomerUI .[#707070,thickness=2].> ECommerceSystem.ECommerceAPI : "<color:#707070>Uses to browse products and place orders"
ECommerceSystem.AdminUI .[#707070,thickness=2].> ECommerceSystem.ECommerceAPI : "<color:#707070>Uses to manage products, orders, and customers"
ECommerceSystem.ECommerceAPI .[#707070,thickness=2].> ECommerceSystem.Database : "<color:#707070>Reads from and writes to"
DatabaseAdministrator .[#707070,thickness=2].> ECommerceSystem.Database : "<color:#707070>Manages and maintains"
ECommerceSystem.ECommerceAPI .[#707070,thickness=2].> AccountingSystem : "<color:#707070>Sends order and payment data to"
ECommerceSystem.ECommerceAPI .[#707070,thickness=2].> ShippingSystem : "<color:#707070>Sends order and shipping data to"
ECommerceSystem.ECommerceAPI .[#707070,thickness=2].> NotificationSystem : "<color:#707070>Sends order confirmation and shipping notifications to"
NotificationSystem .[#707070,thickness=2].> Customer : "<color:#707070>Sends notifications to"
Administrator .[#707070,thickness=2].> ECommerceSystem.AdminUI : "<color:#707070>Uses to manage products, orders, and customers"
Customer .[#707070,thickness=2].> ECommerceSystem.CustomerUI : "<color:#707070>Uses to browse products and place orders"
